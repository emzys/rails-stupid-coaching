<h1>Ask view!</h1>

<form action="/answer" method="GET">
  <input type="text" name="question"  placeholder="What's your question?" value="<% params[:question] %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :name, "anything" %>
  <input type="submit">
</form>
